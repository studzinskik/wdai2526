            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/21",
              "host": ["{{baseUrl}}"],
              "path": ["products", "21"]
            }
          }
        }
      ]
    },
