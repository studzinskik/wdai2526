            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?search=jacket",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
                  "value": "jacket"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Category",
